{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Cafaye User State",
    "type": "object",
    "properties": {
        "core": {
            "type": "object",
            "properties": {
                "tailscale_enabled": {
                    "type": "boolean"
                },
                "zram_enabled": {
                    "type": "boolean"
                },
                "authorized_keys": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "interface": {
            "type": "object",
            "properties": {
                "terminal": {
                    "type": "object",
                    "properties": {
                        "shell": {
                            "enum": [
                                "zsh",
                                "bash"
                            ]
                        },
                        "multiplexer": {
                            "enum": [
                                "zellij",
                                "tmux",
                                "none"
                            ]
                        }
                    }
                },
                "theme": {
                    "type": "string"
                }
            }
        },
        "languages": {
            "type": "object",
            "additionalProperties": {
                "type": "boolean"
            }
        },
        "dev_tools": {
            "type": "object",
            "additionalProperties": {
                "type": "boolean"
            }
        }
    }
}