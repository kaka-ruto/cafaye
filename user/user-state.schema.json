{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Cafaye User State",
    "type": "object",
    "properties": {
        "core": {
            "type": "object",
            "properties": {
                "tailscale_enabled": {
                    "type": "boolean"
                },
                "zram_enabled": {
                    "type": "boolean"
                },
                "authorized_keys": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "interface": {
            "type": "object",
            "properties": {
                "terminal": {
                    "type": "object",
                    "properties": {
                        "shell": {
                            "enum": [
                                "zsh",
                                "bash"
                            ]
                        },
                        "multiplexer": {
                            "enum": [
                                "zellij",
                                "tmux",
                                "none"
                            ]
                        }
                    }
                },
                "theme": {
                    "type": "string"
                }
            }
        },
        "languages": {
            "type": "object",
            "additionalProperties": {
                "type": "boolean"
            }
        },
        "services": {
            "type": "object",
            "properties": {
                "postgresql": {
                    "type": "boolean"
                },
                "redis": {
                    "type": "boolean"
                }
            }
        },
        "frameworks": {
            "type": "object",
            "properties": {
                "rails": {
                    "type": "boolean"
                },
                "django": {
                    "type": "boolean"
                },
                "nextjs": {
                    "type": "boolean"
                }
            }
        },
        "editors": {
            "type": "object",
            "properties": {
                "neovim": {
                    "type": "boolean"
                },
                "helix": {
                    "type": "boolean"
                },
                "vscode_server": {
                    "type": "boolean"
                },
                "default": {
                    "enum": [
                        "neovim",
                        "helix",
                        "vscode_server",
                        "none"
                    ]
                },
                "distributions": {
                    "type": "object",
                    "properties": {
                        "nvim": {
                            "type": "object",
                            "properties": {
                                "lazyvim": {
                                    "type": "boolean"
                                },
                                "astronvim": {
                                    "type": "boolean"
                                },
                                "nvchad": {
                                    "type": "boolean"
                                },
                                "lunarvim": {
                                    "type": "boolean"
                                }
                            }
                        }
                    }
                }
            }
        },
        "dev_tools": {
            "type": "object",
            "additionalProperties": {
                "type": "boolean"
            }
        }
    }
}