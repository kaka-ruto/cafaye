#!/bin/bash
# Cafaye Updater
# Updates the Cafaye foundation from the upstream repository
# Preserves user configuration and handles merges cleanly

UPSTREAM_URL="https://github.com/kaka-ruto/cafaye.git"
CAFAYE_DIR="$HOME/.config/cafaye"

# Colors
GREEN='\033[0;32m'
BLUE='\033[0;34m'
RED='\033[0;31m'
NC='\033[0m'

echo -e "${BLUE}☕ Updating Cafaye Foundation...${NC}"

# Check if we are in a valid Cafaye directory
if [[ ! -d "$CAFAYE_DIR" ]]; then
    echo -e "${RED}Error: Cafaye directory not found at $CAFAYE_DIR${NC}"
    exit 1
fi

cd "$CAFAYE_DIR" || exit 1

# Ensure git is initialized for updates
if ! git remote | grep -q "^upstream$"; then
    echo "Configuring upstream remote..."
    git remote add upstream "$UPSTREAM_URL"
fi

# Fetch latest changes
echo "Fetching updates..."
if ! git fetch upstream master; then
    echo -e "${RED}Failed to fetch updates. Check your internet connection.${NC}"
    exit 1
fi

# Check if updates are available
LOCAL_HASH=$(git rev-parse HEAD)
REMOTE_HASH=$(git rev-parse upstream/master)

if [[ "$LOCAL_HASH" == "$REMOTE_HASH" ]]; then
    echo -e "${GREEN}Cafaye is already up to date!${NC}"
    exit 0
fi

# Apply updates (Rebase strategy to keep user commits on top)
echo "Applying updates..."
if git show-ref --verify --quiet refs/heads/master; then
    # If on master, pull with rebase
    if git pull --rebase upstream master; then
        echo -e "${GREEN}✅ Update successful!${NC}"
    else
        echo -e "${RED}Update failed due to conflicts. Please resolve them manually in $CAFAYE_DIR.${NC}"
        exit 1
    fi
else
    # If detached or on another branch, just checkout the files
    echo "Updating foundation files..."
    git checkout upstream/master -- .
    echo -e "${GREEN}✅ Foundation files updated.${NC}"
fi

# Prompt to re-run installer/apply
echo ""
echo -e "To apply these changes to your system, run:"
echo -e "${BLUE}  caf apply${NC}"
echo -e "  OR"
echo -e "${BLUE}  $CAFAYE_DIR/install.sh${NC} (for full reconfiguration)"
