#!/bin/bash

# Cafaye OS Timezone Selector (inspired by omarchy-tz-select)
# Interactive timezone picker

timezone=$(timedatectl list-timezones | gum filter --height 20 --header "Set timezone") || exit 1

if [ -z "$timezone" ]; then
  echo "No timezone selected."
  exit 1
fi

sudo timedatectl set-timezone "$timezone"
echo "âœ… Timezone is now set to $timezone"

# For NixOS declarative persistence, users should also update their configuration
echo ""
echo "ðŸ’¡ To persist this in NixOS, add to your configuration:"
echo "   time.timeZone = \"$timezone\";"

caf-task-done "Timezone Set"
