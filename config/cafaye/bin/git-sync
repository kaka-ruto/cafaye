#!/usr/bin/env bash
set -euo pipefail

if ! git rev-parse --is-inside-work-tree >/dev/null 2>&1; then
  echo "git-sync must be run inside a git repository." >&2
  exit 1
fi

msg="${*:-Sync changes}"

git pull --rebase
git add -A

if ! git diff --cached --quiet; then
  git commit -m "$msg"
else
  echo "No staged changes to commit."
fi

git push
